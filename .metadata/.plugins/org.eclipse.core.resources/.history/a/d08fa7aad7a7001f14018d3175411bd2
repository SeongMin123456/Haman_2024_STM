#include "main.h"
#include "C:\Users\user\STM32Cube\Repository\STM32Cube_FW_F4_V1.28.1\Drivers\STM32F4xx_HAL_Driver\Src"
extern UART_HandleTypeDef huart2;
I2C_HandleTypeDef *hi2c = NULL;

int __io_putchar(int ch) {
	HAL_UART_Transmit(&huart2, &ch, 1, 10/*ms*/);
	return ch;
}
void standby() {
	while (HAL_GPIO_ReadPin(B1_GPIO_Port, B1_Pin))
		;
}
void cls()				   // 화면 clear
{
	printf("\033[2J");
}
void cursor(int x, int y)  // 해당 위치로 커서 이동
{
	char buf[20];
	sprintf(buf, "\033[%d;%dH", y, x);
	puts(buf);
}
void ProgramStart(char *str)
{
//	printf("\033[2J\033[0;0H");
	cls();
	cursor(0,0);
	printf("program Name - %s\r\n", str);
	printf("Press Blue-button(B1) to Start...\r\n");
	standby();
}
int i2c_init(I2C_HandleTypeDef *p)
{
	hi2c = p;
}
int i2c_scan()
{
	if(hi2c == NULL)	return;
	for(int addr=0; addr<128; addr++)
	{
		if(HAL_I2C_IsDeviceReady(hi2c, addr, 1, 10 /* ms*/) == HAL_OK)
		{
			printf("  %02x ", addr);
		}
		else
		{
			printf("  .  ");
		}
		if((addr % 16) == 15)	printf("\r\n");
	}
}
